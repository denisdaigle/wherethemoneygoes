<!DOCTYPE html>
<html>
<head>
  <title>Wherethemoneygoes</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
<script type="text/javascript">

var correctCards = 0;
$( init );

function init() {

  // Hide extra info
  $('#RetailersInfo').hide();
  //$('#ExpensesInfo').hide();
  $('#SalariesInfo').hide();
  $('#PrizesInfo').hide();
  //$('#TaxesInfo').hide();
  //$('#ProvincesInfo').hide();

  // Hide the success message
  $('#successMessage').hide();
  $('#successMessage').css( {
    left: '580px',
    top: '250px',
    width: 0,
    height: 0
  } );

  // Reset the game
  correctCards = 0;
  $('#cardPile').html( '' );
  $('#cardSlots').html( '' );

  // Create the pile of shuffled cards
  var numbers = [ "Provinces", "Prizes", "Retailers", "Salaries", "Taxes", "Expenses" ];
  numbers.sort( function() { return Math.random() - .5 } );

  for ( var i=0; i<6; i++ ) {
    $('<div>' + numbers[i] + '</div>').data( 'number', numbers[i] ).attr( 'id', numbers[i] ).appendTo( '#cardPile' ).draggable( {
      containment: '#content',
      stack: '#cardPile div',
      cursor: 'move',
      revert: true
    } );
  }

  // Create the card slots
  //var words = [ "Provinces", "Prizes", "Retailers", "Salaries", "Taxes", "Expenses" ];
  //for ( var i=1; i<=6; i++ ) {
  //  $('<div>' + words[i-1] + '</div>').data( 'number', words[i-1] ).appendTo( '#cardSlots' ).droppable( {
  //    accept: '#cardPile div',
  //    hoverClass: 'hovered',
  //    drop: handleCardDrop
  //  } );
  //}

  //var words = [ "Provinces", "Prizes", "Retailers", "Salaries", "Taxes", "Expenses" ];
  //for ( var i=1; i<=6; i++ ) {
    $('<div id="aProvinces"></div>').data( 'number', 'Provinces' ).appendTo( '#cardSlots' ).droppable( {
      accept: '#cardPile div',
      hoverClass: 'hovered',
     drop: handleCardDrop
    } );

    $('<div id="aPrizes"></div>').data( 'number', 'Prizes' ).appendTo( '#cardSlots' ).droppable( {
      accept: '#cardPile div',
      hoverClass: 'hovered',
     drop: handleCardDrop
    } );

    $('<div id="aRetailers"></div>').data( 'number', 'Retailers' ).appendTo( '#cardSlots' ).droppable( {
      accept: '#cardPile div',
      hoverClass: 'hovered',
     drop: handleCardDrop
    } );

    $('<div id="aSalaries"></div>').data( 'number', 'Salaries' ).appendTo( '#cardSlots' ).droppable( {
      accept: '#cardPile div',
      hoverClass: 'hovered',
     drop: handleCardDrop
    } );

    $('<div id="aTaxes"></div>').data( 'number', 'Taxes' ).appendTo( '#cardSlots' ).droppable( {
      accept: '#cardPile div',
      hoverClass: 'hovered',
     drop: handleCardDrop
    } );

    $('<div id="aExpenses"></div>').data( 'number', 'Expenses' ).appendTo( '#cardSlots' ).droppable( {
      accept: '#cardPile div',
      hoverClass: 'hovered',
     drop: handleCardDrop
    } );
  //}

}

function handleCardDrop( event, ui ) {
  var slotNumber = $(this).data( 'number' );
  var cardNumber = ui.draggable.data( 'number' );

  // If the card was dropped to the correct slot,
  // change the card colour, position it directly
  // on top of the slot, and prevent it being dragged
  // again

  if ( slotNumber == cardNumber ) {
    ui.draggable.addClass( 'correct' );
    ui.draggable.draggable( 'disable' );
    $(this).droppable( 'disable' );
    ui.draggable.position( { of: $(this), my: 'left top', at: 'left top' } );
    ui.draggable.draggable( 'option', 'revert', false );
    correctCards++;
	$('#' + $(this).data( 'number' ) + 'Info').show('fast');
  } 

  // If all the cards have been placed correctly then display a message
  // and reset the cards for another go

  if ( correctCards == 6 ) {
    $('#successMessage').show();
    $('#successMessage').animate( {
      left: '350px',
      top: '100px',
      width: '275px',
      height: '150px',
      opacity: 1
    } );
  }

}

</script>



</head>
<body>
  <div class="canvas">
    <%= yield %>
  </div>
</body>

</html>
